<!-- Register -->
<section class="register pt-4">
    <div class="container">
        <div class="row content w-75 px-md-5 px-2 py-4 mx-auto" id="bg">
            <div class="col-lg-6 mb-3 d-flex justify-content-center">
                <img src="/img/Animated_Svg/register_animate.svg" class="img-fluid" alt="img">
            </div>
            <div class="col-lg-6 py-2 align-self-center">
                <h3 class="mb-3 fw-bold text-primary text-md-start text-center">Register</h3>
                <form action="/register" method="POST" autocomplete="off">
                    <% if(messages.error) { %>
                        <span class="text-danger"><%= messages.error %></span>
                    <% } %>
                    <div class="form-group">
                        <label class="d-block text-primary mb-1" for="username">Name</label>
                        <input type="text" name="name" value="<%= messages.name %>" class="form-control d-block bg-black lh-md w-100 py-2 px-3 text-primary mb-1 text-white" id="username" placeholder="Enter Your Name">
                    </div>
                    <div class="form-group mt-2">
                        <label class="d-block text-primary mb-1" for="username">Email</label>
                        <input type="email" name="email" value="<%= messages.email %>" class="form-control d-block bg-black lh-md w-100 py-2 px-3 text-primary mb-1 text-white" id="email" placeholder="Enter Your Email">
                    </div>
                    <div class="form-group mt-2">
                        <label class="d-block text-primary mb-1" for="username">Phone No.</label>
                        <input type="text" name="phone" value="<%= messages.phone %>" class="form-control d-block bg-black lh-md w-100 py-2 px-3 text-primary mb-1 text-white" id="phone" placeholder="Enter Your Phone No.">
                    </div>
                    <div class="form-group mt-2">
                        <label class="d-block text-primary mb-1" for="username">Address</label>
                        <textarea type="text" name="address" value="<%= messages.address %>" class="form-control d-block bg-black lh-md w-100 py-2 px-3 text-primary mb-1 text-white" id="address" placeholder="Enter Your Address"></textarea>
                    </div>
                    
                    <div class="form-group mt-2">
                        <label class="d-block text-primary mb-1" for="username">Password</label>
                            <input type="password" name="password"  aria-describedby="addon-wrapping" class="form-control d-block bg-black lh-md w-100 py-2 px-3 text-primary mb-1 text-white" id="password" placeholder="***************">
                        
                    </div>
                    <div class="row d-flex mt-4">
                        <div class="col-md-5">
                            <button class="btn w-100 text-primary fw-bold">Register</button>
                        </div>
                        <div class="col-md-7 pt-2">
                            <a href="/login" class="text-primary text-decoration-none opacity-75" style="font-size: 14px;">Already have account?</a>   
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

