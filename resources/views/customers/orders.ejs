<!-- Orders -->
<section class="orders my-5 py-4">
    <div class="container">
        <div class="col-12 d-flex align-items-center justify-content-center border-2 rounded-pill border-bottom border-primary">
            <h1 class="text-primary ms-3 mt-1 fs-3">Order Summary</h1>
        </div>
        <% if(messages.success) { %>
        <div id="success-alert" class="d-flex align-items-center bg-success text-white fw-bold px-4 py-3" role="alert">
            <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                <path
                    d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z" />
            </svg>
            <p><%= messages.success %></p>
        </div>
        <% } %>
        <div class="m-4 mt-5 table-responsive">
            <table class="table bg-black mt-4 border-primary">
                <thead>
                    <tr class="fw-bold text-black bg-primary text-center">
                        <th class="px-4 border-2 border-dark w-25">Order ID</th>
                        <th class="px-4 border-2 border-dark w-25">Phone No.</th>
                        <th class="px-4 border-2 border-dark" style="width: 40%;">Address</th>
                        <th class="px-4 border-2 border-dark px-4" style="width: 10%">Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(orders.length) { %>
                        <% orders.forEach((order)=> { %>
                            <tr class="fw-normal text-white">
                                <td class="px-lg-4 px-2 text-center py-lg-2 py-3">
                                    <a href="/customer/orders/<%= order._id %>" class="link text-decoration-none"><%= order._id %></a>
                                </td>
                                <td class="px-lg-4 px-2 py-lg-2 py-3 text-center">
                                    <%= order.phone %>
                                </td>
                                <td class="px-lg-4 px-2 py-lg-2 py-3">
                                    <%= order.address %>
                                </td>
                                <td class="px-lg-4 px-2 py-lg-2 py-3 text-primary opacity-75 text-center">
                                    <%= moment(order.createdAt).format('hh:mm A') %>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <div class="col-12 d-flex justify-content-center">
                            <h5 class="text-white"><span>No orders found! ☹</span></h5>
                        </div>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</section>


