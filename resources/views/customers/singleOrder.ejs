<!-- Status -->
<section class="status my-5 py-4">
    <div class="container">
        <div class="row">
            <div class="status-box pt-4">
                <div class="d-flex align-items-center justify-content-between mb-lg-5 mb-3 border-bottom border-2 border-primary rounded-pill px-lg-5 px-1">
                    <div class="d-flex align-items-center">
                        <img src="/img/Track.svg" class="img-fluid pb-1" style="width: 42px;" alt="">
                        <h1 class="fs-5 text-white ms-lg-2 ms-1 mb-1">Track delivery status</h1>
                    </div>
                    <h6 class="text-primary mb-0"><%= order._id %></h6>
                    <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
                </div>
                <ul class="fs-5 ps-md-5 ps-0">
                    <li class="status-line list-unstyled text-white mb-4" data-status="order_placed"><span class="ps-md-4 ps-3">Order Placed</span></li>
                    <li class="status-line list-unstyled text-white mb-4" data-status="confirmed"><span class="ps-md-4 ps-3">Order Confirmation</span></li>
                    <li class="status-line list-unstyled text-white mb-4" data-status="prepared"><span class="ps-md-4 ps-3">Preparation</span></li>
                    <li class="status-line list-unstyled text-white mb-4" data-status="delivered"><span class="ps-md-4 ps-3">Out for Delivery</span></li>
                    <li class="status-line list-unstyled text-white mb-4 " data-status="completed"><span class="ps-md-4 ps-3">Complete</span></li>
                </ul>
            </div>
        </div>
        
    </div>
</section>


